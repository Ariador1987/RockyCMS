@model IEnumerable<Rocky.Models.ApplicationType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="p-2 rounded bg-primary text-light text-decoration-none" asp-controller="ApplicationType" asp-action="Create">
                <i class="fas fa-plus"></i>
                &nbsp;Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (!Model.Any())
    {
        <p class="text-capitalize">no application types to display</p>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appType in Model)
                {
                    <tr>
                        <td width="80%">@appType.Name</td>
                        <td class="text-center">
                            @{
                                <partial name="_EditAndDeleteBtn" model="appType.Id" />
                            }
                            @*<div class="w-75 btn-group justify-content-around" role="group">
                                    <a asp-controller="ApplicationType" asp-route-id="@appType.Id" asp-action="Edit" class="btn btn-primary text-capitalize mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="ApplicationType" asp-route-id="@appType.Id" asp-action="Delete" class="btn btn-danger text-capitalize mx-2">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </div>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
