@model IEnumerable<Rocky.Models.ApplicationType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="p-2 rounded bg-primary text-light text-decoration-none" asp-controller="ApplicationType" asp-action="Create">Create New Application Type</a>
        </div>
    </div>

    <br /><br />

    @if (!Model.Any())
    {
        <p class="text-capitalize">no application types to display</p>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appType in Model)
                {
                    <tr>
                        <td width="100%">@appType.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
