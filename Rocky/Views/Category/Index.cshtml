@model IEnumerable<Rocky.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="p-2 rounded bg-primary text-light text-decoration-none" asp-controller="Category" asp-action="Create">
                <i class="fas fa-plus"></i> &nbsp;Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if (!Model.Any())
    {
        <p class="text-capitalize">no categories to display</p>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td width="30%">@category.DisplayOrder</td>
                        <td class="text-center">
                            @{
                                <partial name="_EditAndDeleteBtn" model="category.Id" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
